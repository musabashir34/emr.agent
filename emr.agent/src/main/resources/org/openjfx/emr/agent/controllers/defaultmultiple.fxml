<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.emr.agent.controllers.MultipleDefaultController">
   <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" prefHeight="53.0" prefWidth="588.0" style="-fx-text-fill: black;" text="MULTIPLE INSTANCES PREDICTION OF DEBT DEFAULT" textFill="#000000da" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="Arial Nova Bold" size="15.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" maxWidth="300.0" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: white;" visible="false" VBox.vgrow="NEVER">
               <children>
                  <Label alignment="CENTER" prefHeight="50.0" prefWidth="279.0" style="-fx-background-color: white;" text="Computing your Preditions" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Algerian" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <ProgressIndicator nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="50.0" HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <Button mnemonicParsing="false" onAction="#makePredictions" prefHeight="27.0" prefWidth="106.0" style="-fx-background-color: green; -fx-text-fill: white;" text="Upload CSV">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="predictionsTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="75.0" text="PID" />
            <TableColumn fx:id="classColumn" prefWidth="75.0" text="Financial Class" />
          <TableColumn fx:id="roomColumn" prefWidth="75.0" text="Room" />
            <TableColumn fx:id="totalDepositColumn" prefWidth="75.0" text="Total Deposited" />
            <TableColumn fx:id="totalBillColumn" prefWidth="75.0" text="Total Bill" />
            <TableColumn fx:id="admissionDaysColumn" prefWidth="75.0" text="Days on Admission" />
            <TableColumn fx:id="defaultRiskColumn" prefWidth="75.0" text="Risk of Default" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
         <children>
            <Button mnemonicParsing="false" onAction="#savePredictions" prefHeight="25.0" prefWidth="150.0" style="-fx-background-color: green; -fx-text-fill: white;" text="Save Predictions">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#clearPredictions" prefHeight="35.0" prefWidth="154.0" style="-fx-background-color: red; -fx-text-fill: white;" text="Clear Predictions">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
