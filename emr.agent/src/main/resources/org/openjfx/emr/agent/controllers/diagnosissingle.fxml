<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.emr.agent.controllers.SingleDiagnosisController">
   <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" prefHeight="53.0" prefWidth="588.0" style="-fx-text-fill: black;" text="SINGLE INSTANCE PREDICTION OF BILL ITEM DIAGNOSIS" textFill="#000000da" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="Arial Nova Bold" size="15.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" maxWidth="300.0" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: white;" visible="false" VBox.vgrow="NEVER">
               <children>
                  <Label alignment="CENTER" prefHeight="50.0" prefWidth="279.0" style="-fx-background-color: white;" text="Computing your Preditions" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Algerian" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <ProgressIndicator nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="50.0" HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <Button mnemonicParsing="false" onAction="#makeSinglePrediction" prefHeight="30.0" prefWidth="273.0" style="-fx-background-color: green; -fx-text-fill: white;" text="Click to Provide Details of the Instance">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="predictionsTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="75.0" text="PID" />
          <TableColumn fx:id="billItemColumn" prefWidth="75.0" text="Bill Item" />
            <TableColumn fx:id="diagnosisColumn" prefWidth="75.0" text="Diagnosis" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
         <children>
            <HBox alignment="CENTER" prefHeight="35.0" prefWidth="508.0" spacing="20.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" onAction="#savePredictions" prefHeight="35.0" prefWidth="170.0" style="-fx-background-color: green; -fx-text-fill: white;" text="Save predictions">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="addAnotherInstance" mnemonicParsing="false" onAction="#makeSinglePrediction" prefHeight="35.0" prefWidth="189.0" style="-fx-background-color: blue; -fx-text-fill: white;" text="Add Another Instance">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#clearPredictions" prefHeight="35.0" prefWidth="155.0" style="-fx-background-color: red; -fx-text-fill: white;" text="Clear Predictions">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
