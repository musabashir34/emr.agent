<HBox fx:id="homeView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" HBox.hgrow="always" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.emr.agent.controllers.JavaFxHomePageController">
   <children>
      <VBox prefHeight="400.0" prefWidth="422.0" style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
         <children>
            <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
               <content>
                  <TilePane alignment="CENTER" hgap="250.0" prefColumns="2" prefRows="2" prefTileHeight="200.0" prefTileWidth="200.0" vgap="50.0">
                     <children>
                        <Button fx:id="makequeries" contentDisplay="TOP" mnemonicParsing="false" onAction="#makequeries" prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: WHITE;" text="PREDICTIONS" textAlignment="CENTER">
